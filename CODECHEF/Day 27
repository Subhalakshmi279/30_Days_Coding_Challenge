Find Integer

#include <iostream>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	    int x;
	    cin>>x;
	        int r;
	        
	        for(int i=x+1;;i++){
	            int j=i;
	            int a[10]{0};
	            int flag=1;
	            while(j>0){
	            r=j%10;
	            a[r]++;
	            
	            if(a[r]>1){
	                flag=0;
	                break;
	            }
	            j/=10;
	            }
	            
	            if(flag==1){
	            cout<<i<<endl;
	            break;
	            }
	        }
	    
	}
	return 0;
}
